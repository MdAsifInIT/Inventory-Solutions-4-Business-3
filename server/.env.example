# Server Configuration
NODE_ENV=development
PORT=5000

# Database
MONGO_URI=mongodb://localhost:27017/inventory-solutions

# JWT Secrets (REQUIRED - generate strong random strings)
JWT_SECRET=your_jwt_secret_here_min_32_characters
JWT_REFRESH_SECRET=your_refresh_secret_here_different_from_jwt_secret

# CORS Configuration
CLIENT_URL=http://localhost:5173
MOBILE_URL=http://localhost:19006

# Payment Gateway (Optional - Razorpay)
# Leave empty to disable online payments
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# Example for production:
# RAZORPAY_KEY_ID=rzp_live_xxxxxxxxxxxxx
# RAZORPAY_KEY_SECRET=your_razorpay_secret
